@using SSGeek.Models;


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SSGeek.Models.AlienAgeViewModel


<section class="calculator-section">
    <h2 class="calculator-header">Alien Age Result</h2>
    <div class="flex-container">
        <div class="flex-child">
            <img src="~/Content/img/@(Model.Planet.ToLower()).jpg" />
        </div>
        <div class="flex-child">
            <form>
                <h1>If you are @Model.EarthAgeYears years old on Earth, you would weight @Model.AlienAgeYears years old on @Model.Planet</h1>
            </form>
        </div>
    </div>
</section>
