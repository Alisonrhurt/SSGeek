@using SSGeek.Models;
@model SSGeek.Models.AlienWeightEnterModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="calculator-section">
    <h2 class="calculator-header">Alien Weight!</h2>
    <div class="flex-container">
        <div class="flex-child">
            <p>Choose a planet</p>
            <p>Enter Your Earth Weight</p>
        </div>
        <div class="flex-child">
            <form method="get" action="@Url.Action("AlienWeightResult", "Calculators")">
                @Html.DropDownListFor(m => m.Planet, AlienAgeModel.Planets, "Select Planet")
                <p></p>
                @Html.TextBoxFor(m => m.EarthWeight, new { placeholder = "enter earth weight, earthling!" })
                <p></p>
                <button>Calculate Weight</button>
            </form>
        </div>
    </div>

    @RenderBody()
</section>